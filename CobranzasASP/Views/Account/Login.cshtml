@using CobranzasASP.Models
@model LoginViewModel

<div class="login-box" style="display:block; margin-left:auto; margin-right: auto;">

    <div class="login-logo">
        <a href="../../index2.html"><b>CRM</b></a>
    </div>

    <div class="card">
        <div class="card-body login-card-body">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <p class="login-box-msg">Inicia tu sesión</p>
                    <hr />

                    <div class="form-group">

                        <div class="input-group mb-3">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="input-group mb-3">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-unlock-alt"></i></span>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-7">
                            <div class="icheck-primary">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                <label for="remember">
                                    Recuérdame
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-5">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Iniciar sesión" class="btn btn-primary" style="width:108%" />
                                </div>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>

                    <p style="text-align:center">
                        @Html.ActionLink("Registrarse", "Register")
                    </p>
                    @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
                }
            </section>
        </div>
     </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}